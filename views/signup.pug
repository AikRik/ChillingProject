html
	head
		script(src="https://code.jquery.com/jquery-3.2.1.min.js")
	body
		include navbar
		h2(id="suh2") Sign Up!
		br
		form(id="signUpForm" method="POST", action="/signup")
			label Firstname: 
				input(class="suInput" id="firstname" type="text" name="firstname", placeholder="Firstname") 
			br
			label Lastname: 
				input(class="suInput" id="lastname" type="text" name="lastname", placeholder="Lastname")
			br
			label Email:   
				input(class="suInput" id="email" type="email" name="email", placeholder="Email")
			br
			h6(id="error") #{error}
			label Username:
				input(class="suInput" id="username" type="text" name="username" placeholder="Username")
			
			br
			label Password:
				input(class="suInput" id="password" type="password" name="password" placeholder="Password")
			br
			br
			button(id="suSubmit" type="submit", value= "Submit") Sign Up

style
	include ../public/custom/signup.css
script.
	$(document).ready(function() {
		$('#firstname').keypress(function (e) {
			var regex = new RegExp("^[a-zA-Z]+$");
			var str = String.fromCharCode(!e.charCode ? e.which : e.charCode);
			if (regex.test(str)) {
			    return true;
			}
			else
			{
				e.preventDefault();
				alert('You can only enter letters');
				return false;
			}
		});
		$('#lastname').keypress(function (e) {
			var regex = new RegExp("^[a-zA-Z]+$");
			var str = String.fromCharCode(!e.charCode ? e.which : e.charCode);
			if (regex.test(str)) {
			    return true;
			}
			else
			{
				e.preventDefault();
				alert('You can only enter letters');
				return false;
			}
		});
		$("form").submit(function(event) {
			let firstname = $("#firstname").val()
			let lastname = $("#lastname").val()
			let email = $("#email").val()
			let username = $("#username").val()
			let pass = $("#password").val()
			let passCheck = $("#passwordCheck").val()	
	
			if(firstname ==="" || lastname === "" || email === "" || username === "" || password === ""){
				event.preventDefault()
				alert("You have missed some fields")
			}
		})
	})